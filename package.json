{
  "name": "alphalabs",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "bun run --filter @alphalabs/frontend dev",
    "dev:backend": "cd backend; python app.py",
    "build": "bun run --filter @alphalabs/frontend build",
    "start": "bun run --filter @alphalabs/frontend start",
    "install:all": "bun install"
  },
  "devDependencies": {
    "bun": "^1.0.0",
    "concurrently": "^9.2.1"
  }
}
